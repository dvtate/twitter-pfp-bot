{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "ES2020",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": false,
        "allowJs": true
    },
    "include": [
        "*.js",
        "*.ts"
    ],
    "exclude": [
        "node_modules", "dist"
    ]
}